      <div class="article-cards">

        
       
        
        <% posts.forEach(post => { %>
            <a href="/blog/<%= post.slug %>" class="article-card big-card">
              <div class="card-img-container">
                <img class="card-img" src="/images/uploads/<%= post.coverImage %>" alt="<%= post.title %>">
